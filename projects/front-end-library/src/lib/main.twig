<html>
    <head>
        <script>
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.type = 'text/css'; 
            link.href = '/public/styles/style.css';
            document.getElementsByTagName('HEAD')[0].appendChild(link);
        </script>

        <style>
            .center {
                display: flex; 
                align-items: center;
                justify-content: center;
                flex-wrap: wrap;
                width: 100%;
                height: 100%;
            }
        </style>
    </head>
    <body>

        <main class='center'>

            {# For DEBUG puropose: #}
            {# <pre>{{ dump(_context) }}</pre> #}

            {% if _context.elementPath is defined %}
                
                {% set elementPath = _context.elementPath %}
                {% include './' ~ elementPath ~ '.twig' with _context %}
                
            {% else %}

                <p>Please provide a <b>elementPath</b> properties in URL. </p>
                <p>E.g. http://localhost:3001/api/twig?elementPath=components/button/twig/button</p>
                <pre>{{ dump(_context) }}</pre>
            {% endif %}

        <main>
    </body>
</html>


