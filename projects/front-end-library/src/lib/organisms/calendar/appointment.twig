<div class="{{ class|default('') }}">
    <div class="row {{ headerClass|default('mb-5') }}">
        <div class="col-md-8">
            <h3 class="mb-0">Please choose a time slot for your appointment</h3>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="d-flex justify-content-center justify-content-md-end">
                <label for="datePickerInput" class="btn p-0 link-underline pb-0 pt-1">Monthly view </label>
                {% include '@molecules/16-calendar/date-picker.twig' with { inputId: "datePickerInput" } %}
            </div>
        </div>
    </div>

    {% include '@organisms/30-calendar/time-picker-form.twig' with {
        class: calendarFormClass|default('')
    } only %}

    <div class="mx-lg-4 mb-5">
        {% include '@molecules/16-calendar/card-appointment-summary.twig' with {
            class:"mb-5",
        } %}

        <div class="row mb-1">
            <div class="col-md-6">
                {% include '@components/form/form-input-text.twig' with { label:"Contact name", inputId:"appointment_contactName"} %}
            </div>
            <div class="col-md-6 pl-md-1">
                {% include '@components/form/form-input-text.twig' with { label:"Last name", inputId:"appointment_contactLastName" } %}
            </div>
        </div>

        {% include '@components/notification/notification-message.twig' with {
            class:"mb-2",
            textLabel:"Be informed that a person aged <strong>18 years or older</strong> must be present during technician's visit."
        } %}
    </div>
</div>
