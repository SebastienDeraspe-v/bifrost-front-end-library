{# ------------------------------------------------------------------------------------------------------------------ #}
<div class="c-billing-grid-container {{ class|default('') }}">
    <div class="billing-header-actual col-actual ">
        <h3>{{ actual_billingTitle|default("Actual monthly plan") }}</h3>

        {% if isCondensed is defined and isCondensed is same as (true) %}
            <div class="">
                {% include '@components/display/display-price.twig' with {
                    priceClass: "w-100",
                    priceDollar: actual_headerPricebox.priceDollar|default("152"),
                    priceCent: actual_headerPricebox.priceCent|default("34"),
                    priceInfosSupp: actual_headerPricebox.priceInfosSupp|default("Taxes incl."),
                    priceBoxAlignement: "left"
                } only %}

                {% include '@atoms/07-payment/payment-price-savings.twig' with {
                    class:"",
                    priceDashed: actual_headerPricebox.priceDashed|default("$200.00/month"),
                    priceSaved: actual_headerPricebox.priceSaved|default("<strong>$20.00/month</strong> until January 1st 2020")
                } only %}
            </div>
        {% else %}
            <div class="row align-items-center">
                <div class="col-lg-5">
                    {% include '@components/display/display-price.twig' with {
                        priceClass: "w-100",
                        priceDollar: actual_headerPricebox.priceDollar|default("152"),
                        priceCent: actual_headerPricebox.priceCent|default("34"),
                        priceInfosSupp: actual_headerPricebox.priceInfosSupp|default("Taxes incl."),
                        priceBoxAlignement: "left"
                    } only %}
                </div>
                <div class="col-lg-7">
                    {% include '@atoms/07-payment/payment-price-savings.twig' with {
                        class:"border-left-gray-lg--200 pl-lg-3",
                        priceDashed: actual_headerPricebox.priceDashed|default("$200.00/month"),
                        priceSaved: actual_headerPricebox.priceSaved|default("<strong>$20.00/month</strong> until January 1st 2020")
                    } only %}
                </div>
            </div>
        {% endif %}

        {#<hr class="border-width-4 border-top--dark mb-0">#}
    </div>
    <div class="billing-header-new col-new ">
        <h3>{{ new_billingTitle|default("New monthly plan") }}</h3>

        {% if isCondensed is defined and isCondensed is same as (true) %}
            {% include '@components/display/display-price.twig' with {
                priceClass: "w-100",
                priceDollar: new_headerPricebox.priceDollar|default("152"),
                priceCent: new_headerPricebox.priceCent|default("34"),
                priceInfosSupp: new_headerPricebox.priceInfosSupp|default("Taxes incl."),
                priceBoxAlignement: "left"
            } only %}

            {% include '@atoms/07-payment/payment-price-savings.twig' with {
                class:"",
                priceDashed: new_headerPricebox.priceDashed|default("$200.00/month"),
                priceSaved: new_headerPricebox.priceSaved|default("<strong>$20.00/month</strong> until January 1st 2020")
            } only %}
        {% else %}
            <div class="row align-items-center">
                <div class="col-lg-5">
                    {% include '@components/display/display-price.twig' with {
                        priceClass: "w-100",
                        priceDollar: new_headerPricebox.priceDollar|default("152"),
                        priceCent: new_headerPricebox.priceCent|default("34"),
                        priceInfosSupp: new_headerPricebox.priceInfosSupp|default("Taxes incl."),
                        priceBoxAlignement: "left"
                    } only %}
                </div>
                <div class="col-lg-7">
                    {% include '@atoms/07-payment/payment-price-savings.twig' with {
                        class:"border-left-gray-lg--200 pl-lg-3",
                        priceDashed: new_headerPricebox.priceDashed|default("$200.00/month"),
                        priceSaved: new_headerPricebox.priceSaved|default("<strong>$20.00/month</strong> until January 1st 2020")
                    } only %}
                </div>
            </div>
        {% endif %}

        {#<hr class="border-width-4 border-top--dark mb-0">#}
    </div>

    <div class="billing-body-actual col-actual ">
        {% for item in actual_billingItems %}
            {% include '@molecules/09-payment/billing-item.twig' with {
                textLeft: item.label|default('Item'),
                subTextLeft: item.sublabel|default("This is a subdescription"),
                textRight: "$" ~ item.price|default("50.00") ~ "/month",
                state: item.state|default("removed")
            } only %}
        {% endfor %}
    </div>
    <div class="billing-body-new col-new ">
        {% for item in new_billingItems %}
            {% include '@molecules/09-payment/billing-item.twig' with {
                isCondensed: isCondensed|default(false),
                textLeft: item.label|default('Item'),
                subTextLeft: item.sublabel|default("This is a subdescription"),
                textRight: "$" ~ item.price|default("50.00") ~ "/month",
                state: item.state|default("removed")
            } only %}
        {% endfor %}
    </div>

    <div class="billing-subtotal-actual col-actual">
        {% if actual_hasNoSubtotal is not defined or actual_subtotal is defined and actual_subtotal is not empty %}
            {% include '@molecules/09-payment/billing-subtotal.twig' with {
                class:"",
                subtotalPrice: actual_subtotal.price|default(''),
                discount: actual_subtotal.discount|default(''),
                tps: actual_subtotal.tps|default(''),
                tvq: actual_subtotal.tvq|default('')
            } only %}
        {% endif %}
    </div>
    <div class="billing-subtotal-new col-new">
        {% if new_hasNoSubtotal is not defined or new_subtotal is defined and new_subtotal is not empty %}
            {% include '@molecules/09-payment/billing-subtotal.twig' with {
                class:"",
                subtotalPrice: new_subtotal.price|default(''),
                discount: new_subtotal.discount|default(''),
                tps: new_subtotal.tps|default(''),
                tvq: new_subtotal.tvq|default('')
            } only %}
        {% endif %}
    </div>

    <div class="billing-footer-actual col-actual  mb-6 mb-md-0">
        {% include '@molecules/09-payment/billing-footer.twig' with {
            class:"",
            totalLabel: "Total",
            totalPrice: actual_footer_price|default("$00.00")
        } only %}
    </div>
    <div class="billing-footer-new col-new ">
        {% include '@molecules/09-payment/billing-footer.twig' with {
            class:"",
            totalLabel: "Total",
            totalPrice: new_footer_price|default("$00.00")
        } only %}
    </div>
</div>
