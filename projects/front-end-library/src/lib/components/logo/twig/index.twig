{% set logoLangcode = (langcode is defined and langcode is same as ('FR')) ? 'FR' : 'EN' %}
{% set logoName     = (name is defined and name is same as ('business')) ? 'videotron-business' : 'videotron' %}

{% if not textOnly %}
    <img src="/images/logo/videotron.svg" height="50px" alt="Videotron" class="mr-2">
{% endif %}

{% include '@bf-components/logo/twig/logo-' ~ logoName ~ '-text-' ~ logoLangcode ~ '.twig' with { 
    reversed: reversed,
    textOnly: textOnly|default(false),
} only %}