<!-- input-search.twig -->
{% set class = class ~ " w-100 form-group--search-input" %}
{% set inputClass = inputClass ~ " js-input-search" %}
{% set inputIconPosition = inputIconPosition ~ " pt-2" %}
{% set extraAttribute = "autocomplete=off" %}

{% extends '@bf-components/input-search/twig/input-with-icon.twig' %}
    {% block icon_container %}
        <div class="position-relative pointer-none">
            {% include '@bf-components/icon/twig/index.twig' with {
                name        : 'svg-search',
                reversed    : reversed,
            } only %}
        </div>

        <input id="{{ inputSubmitId|default('') }}"
               class="btn h-100 m-0 p-0 position-absolute--center-right vui--style-reset w-100 sr-only"
               type="submit"
               placeholder="{{ inputPlaceholder|default('') }}"
               value="{{ inputSubmitValue|default('search') }}"
                {{ extraAttributeSubmit|default(NULL) }}
        >
    {% endblock %}