
<nav class="bf-footer-main navbar-expand-lg border-bottom border-top py-0 py-lg-5 py-md-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 order-2 order-lg-1 d-flex flex-column flex-lg-row" data-animate-row="">
                {% for footerLink in footerLinks %}
                    <div class="col-lg bf-border-top-secondary border-top-lg--0" data-animate="fade-in">
                        <button class="navbar-toggler navbar-toggler--dynamic-arrow-direction vui--style-reset px-0 py-3 w-100 d-flex justify-content-between align-items-center d-lg-none"
                                type="button"
                                data-toggle="collapse"
                                data-target="#navbarNav_{{ footerLink.sectionTitle }}"
                                aria-controls="navbarNav_{{ footerLink.sectionTitle }}"
                                aria-expanded="false"
                                aria-label="Toggle navigation"
                        >
                          <span class="navbar-brand pr-md-5" href="#">
                              <span class="mb-0 h5">{{ footerLink.sectionTitle }}</span>
                          </span>
                          {% include '@bf-components/icon/twig/icon-arrow-to-bottom.twig' with { iconClass:"icon-light p-1", iconMarginLeft:"0" } %}
                        </button>

                        <p class="mb-3 font-weight-bold d-none d-lg-block">{{ footerLink.sectionTitle }}</p>

                        <ul class="collapse navbar-collapse align-items-lg-start flex-lg-column mb-0 pl-0 list-reset"
                            id="navbarNav_{{ footerLink.sectionTitle }}">
                            {% for link in footerLink.links %}
                                <li class="p-0 mb-2">
                                    {% include '@bf-components/link/twig/link-default-optimized.twig' with {
                                        href:link.href,
                                        label:link.label,
                                        class:"d-block d-lg-inline py-2 py-lg-0",
                                        rel:link.rel|default("dofollow")
                                    } %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>

            <div class="col-lg-2 order-1 order-lg-2 py-3 text-center" data-animate="fade-in">
                {% include '@bf-components/link/twig/link-back-to-top.twig' with {
                    label:backToTopLabel|default('Back to top'),
                    class:"link-back-to-top h6 font-weight-normal"
                } %}
            </div>
        </div>
    </div>
</nav>