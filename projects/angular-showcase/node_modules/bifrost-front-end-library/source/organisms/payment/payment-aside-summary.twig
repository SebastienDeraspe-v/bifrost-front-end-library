<div class="card {{ class|default('') }}" {% if isAnimationDisabled is not defined %}data-animate=""{% endif %}>
    <div class="card-body py-4">
        {% if hasTitle is not defined or hasTitle is same as (true) %}
            <h2 class="mb-5">Your First Bill</h2>
        {% endif %}

        {#<div data-animate="">#}
            {% include '@atoms/07-payment/payment-item-price--subtotal.twig' with { item:"Monthly Plan<sup>1</sup>", price:"0,00$" } only %}

            {% embed '@components/accordion/accordion-item-view-details.twig' with {
                class:"",
                buttonClass: "d-print-none",
                isCollapse: isMonthlyPlanCollapse|default(false),
                collapseId: "collapseMonthlyPanDetail",
                collapseLabel: "View details"
            } only %}
                {% block collapse_content %}
                    <div>
                        {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Services", price:"00,00$" } only %}
                        {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Equipment & Accessories", price:"0,00$", class:"" } only %}
                    </div>
                {% endblock %}
            {% endembed %}
            <hr>


        {#</div>#}

        {# ------------------------------------------------------------------------------------------------------------------ #}
        {#<div data-animate="">#}
            {% include '@atoms/07-payment/payment-item-price--subtotal.twig' with { item:"One-Time Fees", price:"0,00$" } only %}

            {% embed '@components/accordion/accordion-item-view-details.twig' with {
                class:"",
                buttonClass: "d-print-none",
                isCollapse: isOneTimeFeeCollapse|default(false),
                collapseId: "collapseOneTimeFeeDetail",
                collapseLabel: "View details"
            } only %}
                {% block collapse_content %}
                    <div>
                        {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Installation", price:"0,00$" } only %}
                        {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Lorem ipsum", price:"0,00$", class:"" } only %}
                    </div>
                {% endblock %}
            {% endembed %}
            <hr>

            {#{% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Equipment & Accessories", price:"0,00$"} only %}#}
            {#{% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"Installation", price:"0,00$", class:"mb-5"} only %}#}
            {#{% include '@atoms/07-payment/payment-item-price--savings.twig' with { price:"91,00$"} %}#}
        {#</div>#}

        {# ------------------------------------------------------------------------------------------------------------------ #}
        {#<div data-animate="">#}
            {% include '@atoms/07-payment/payment-item-price--subtotal.twig' with { item:"Subtotal", price:"0,00$", class:"mb-2 mt-5" } only %}
            <p>Taxes (lorem ipsum)</p>

            <hr>

            {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"QST (5%)", price:"0,00$"} only %}
            {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"GST (9.975%)", price:"0,00$", class:"mb-5"} only %}
        {#</div>#}

        {# ------------------------------------------------------------------------------------------------------------------ #}
        {#<div data-animate="">#}
            <p class="d-flex">EIP taxes (36 months paid upfront){% include '@molecules/14-tooltip/tooltip-button.twig' with {
                    buttonClass:"ml-2 p-0",
                    tooltipTxt: "Les équipements Helix doivent être achetés avec un plan de versements de 36 mois ou en paiement unique.",
                } %}</p>
            <hr>
            {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"QST (5%)", price:"0,00$"} only %}
            {% include '@atoms/07-payment/payment-item-price--subitem.twig' with { item:"GST (9.975%)", price:"0,00$", class:"mb-2"} only %}
        {#</div>#}

    </div>

    <div class="pt-0 card-body" {% if isAnimationDisabled is not defined %}data-animate=""{% endif %}>
        {#<div class="mb-5">#}
            {#{% include '@atoms/07-payment/payment-item-price--subtotal.twig' with { item:"Total due", price:"667,05$", class:"", fontWeight:"bold" } only %}#}
            {#<p class="small color-gray--700" data-animate="">Charged at installation</p>#}
        {#</div>#}
        <div class="border-top--dark border-width-4 mb-5 pt-4">
            <div class="align-items-center d-flex justify-content-between vui--font-secondary" >
                <p class="h3 m-0">Total due :</p>
                <p class="font-weight-bold h2 m-0 px-2">0,00$</p>
            </div>

            <p class="a--already-animated color-gray--700 fadeslide-in mb-0 small" >Charged at installation</p>
        </div>

        {#<p class="mb-1 small">1. Savings are for the first 12 months</p>#}
        {#<p class="small color-gray--700"><sup>1</sup> Your next bills won't include these fees</p>#}

        {% block asidePrimaryActions %}
            {% if isStateCartSummary is defined and isStateCartSummary is same as (true) %}
                <div class="mt-4">
                    <!-- Button trigger modal -->
                    {% include 'components-button-secondary' with {
                        buttonClass:"w-100 h5 mb-2",
                        iconContainerClass:"pr-0",
                        buttonLabel:"Save my cart",
                        dataToggle:"modal",
                        dataTarget:"#modalSaveMyCart"
                    } %}

                    {% include '@components/button/button-primary-with-icon.twig' with {
                        buttonClass:"w-100",
                        iconName:"checkmark-circle",
                        iconSize:2,
                        buttonLabel:"Finalize my order",
                        dataToggle:"modal",
                        dataTarget:"#modalContactUs"
                    } %}
                </div>
            {% endif %}
        {% endblock %}
    </div>
</div>
