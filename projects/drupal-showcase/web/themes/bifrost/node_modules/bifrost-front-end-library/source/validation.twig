{# Component porperties validation #}
{% set properties = { 
    "button" : ["label", "size"],
    "contact-form" : ["label"],
} %}

{# Retreive component name from `name` variable ("@components/button/twig/button.twig") #}
{% set componentName = self|split('/')|last|split('.')|first %}

{# Create an array of unsed properties #}
{% set propNotUsed = [] %}

{# Parse context key properties #}
{% for propKey in context|keys %}
    {% if propKey not in properties[componentName] %}
        {# <li>{{ propKey }} - {{ context[propKey] }} is not used</li> #}
        {% set propNotUsed = propNotUsed|merge({ (propKey): context[propKey] }) %}
    {% endif %}
{% endfor %}

{# Display error in console #}
{# <pre>{{ dump(propNotUsed) }}</pre> #}
{% if propNotUsed is not empty %}
    <script>
        (function(){
            let componentName = {{ componentName|json_encode|raw }};
            let errors = {{ propNotUsed|json_encode|raw }};
            console.log('%c Bifrost ' + componentName + ' ', 'background: #FFD200; color: #000000', ' Theses variables are not used in ' + componentName + ':');
            console.table(errors);
        })();
    </script>
{% endif %}
